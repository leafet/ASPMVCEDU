@using ASPMVCEDU.Models
@model List<CourseViewModel>

<h1>Курсы</h1>
<a class="btn btn-primary" asp-controller="Courses" asp-action="Insert" style="margin-top:5px; margin-bottom:5px;">Добавить курс</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Продолжительность (часов)</th>
                <th>Цена (рублей)</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.Description</td>
                    <td>@course.Duration</td>
                    <td>@course.Price</td>
                    <td><a class="btn btn-danger btn-sm" style="margin: 0.2em" asp-action="Remove" asp-route-id="@course.CourseId">Удалить</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>